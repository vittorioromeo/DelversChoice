    SPRCS::$mkSubscriptionUser = new SProc('mk_subscription_user', 2, 0);
    SPRCS::$mkSubscriptionThread = new SProc('mk_subscription_thread', 2, 0);
    SPRCS::$mkSubscriptionTag = new SProc('mk_subscription_tag', 2, 0);

